<HomeScreenView>

    FrostedGlass:

    MDFloatLayout:
        id: board 
        size_hint: 0.30, 0.75
        pos_hint: {'right': 0.375,'center_y': 0.5}
        Image:
            id: board_image 
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            radius: 0 
            source: root.board_top
            allow_stretch: True   
            keep_ratio: False
        Image:
            id: raspberry_image 
            size_hint: 0.625, 0.625 
            pos_hint: {'right': 0.615,'top': 1.025}            
            radius: 0 
            source: root.raspy_bot 
            allow_stretch: True   
            keep_ratio: False  
        
        MDCard:
            id: board_connector_GPIO_OUT
            name: 'GPIO OUT'
            size_hint: 0.15, 0.2
            pos_hint: {'right': 0.995,'top': 0.590}
            md_bg_color: root.connector_gpio_out_color
            on_touch_down: root.clicked( self, True ) if self.collide_point( *args[1].pos ) else root.clicked( self, False )
        
        MDCard:
            id: board_connector_GPIO_INPUT
            name: 'GPIO IN'
            size_hint: 0.15, 0.10
            pos_hint: {'right': 0.15,'top': 0.4250}
            md_bg_color: root.connector_gpio_in_color
            on_touch_down: root.clicked( self, True ) if self.collide_point( *args[1].pos ) else root.clicked( self, False ) 
        
        MDCard:
            id: board_leds_rgb 
            name: 'LED RGB'
            size_hint: 0.10, 0.10
            pos_hint: {'right': 0.35,'top': 0.4250}
            radius: min( self.width, self.height)/2 
            md_bg_color: root.connector_gpio_out_color
            on_touch_down: root.clicked( self, True ) if self.collide_point( *args[1].pos ) else root.clicked( self, False )  

        MDCard:
            id: board_power_relays
            name: 'POWER RELAY'
            size_hint: 0.9250, 0.3
            pos_hint: {'right': 0.95,'top': 0.315 }
            md_bg_color: root.connector_power_in_color
            on_touch_down: root.clicked( self, True ) if self.collide_point( *args[1].pos ) else root.clicked( self, False )  

        MDCard:
            id: board_power_sensor
            name: 'POWER SENSOR'
            size_hint: 0.1150, 0.1150 
            pos_hint: {'right': 0.5475,'top': 0.37}
            radius: min( self.width, self.height)/2 
            md_bg_color: root.power_sensor_color
            on_touch_down: root.clicked( self, True ) if self.collide_point( *args[1].pos ) else root.clicked( self, False ) 

        MDCard:
            id: board_relays_OUTPUT
            name: 'RELAY OUT'
            size_hint: 0.15, 0.3
            pos_hint: {'right': 0.995,'top': 0.925}
            md_bg_color: root.relays_out_color
            on_touch_down: root.clicked( self, True ) if self.collide_point( *args[1].pos ) else root.clicked( self, False ) 

        MDCard:
            id: board_connector_power_input
            name: 'POWER IN'
            size_hint: 0.15, 0.3
            pos_hint: {'right': 0.995,'top': 0.925}
            md_bg_color: root.relays_power_in_color
            on_touch_down: root.clicked( self, True ) if self.collide_point( *args[1].pos ) else root.clicked( self, False ) 

        MDCard:
            id: board_raspberry_bottom    
            name: 'RASPBERRY'
            size_hint: 0.580, 0.580
            pos_hint: {'right': 0.585,'top': 1.005 }
            md_bg_color: root.raspberry_board_color
            on_touch_down: root.clicked( self, True ) if self.collide_point( *args[1].pos ) else root.clicked( self, False ) 
            border: True 
            border_width: 2 
            border_color: (0, 0, 0, 1 )


    MDFloatLayout:
        pos_hint: {'right': 0.95,'center_y': 0.5}
        size_hint: 0.5, 0.8
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5,'center_y': 0.5}

            MDCard:
                size_hint: 1, 0.1
                md_bg_color: [0.5, 0.5, 0.5, 0.5 ]
                radius: 10 
                MDLabel:
                    text: "Giga de testes - Interfaces"
                    halign: "center"
                    bold: True
                    theme_text_color: "Custom"
                    text_color: 'black'

            MDBoxLayout:
                size_hint: 1, 0.9
                MDCard:
                    id: main_content 
                    size_hint: 0.9, 0.9
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    md_bg_color: [0.5, 0.5, 0.5, 0.5 ]
                    radius: 10 

