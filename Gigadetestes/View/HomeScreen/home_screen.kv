<HomeScreenView>

    on_enter: 
        progress_relative.current_percent = 20 


    # Blur suave na tela de fundo para dar uma sensação aconchegante 
    MDFloatLayout:
        id: float_content
        size_hint: 1.1, 1.1
        pos_hint: {'center_x': 0.50,'top': 1.0 }
        FrostedGlass:
            id: FrostedBackground
            overlay_color: app.colors.background
            noise_opacity: 0.05
            blur_size: 15
            saturation: 1.2
            luminosity: 1.3
        
    #
    # Title 
    #
    MDLabel:
        size_hint: 0.8, 0.1 
        pos_hint: {'center_x': 0.5,'top': 0.95 }
        halign: 'center'
        text: 'Giga de testes: Drivers'
        color: app.colors.accent 
        font_size: sp(42)

    #
    # Label de instrução 
    #
    MDBoxLayout:
        size_hint: 0.50, 0.5
        pos_hint: {'center_x': 0.5,'top': 0.8 }
        radius: sp(5)
        orientation: 'vertical'
        AKCircularProgress:
            id: progress_relative
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: None, None
            size: self.parent.size
            
            start_deg: 240
            end_deg: 480
            
            max_percent: 25
            percent_type: "percent"
            
            anim_speed: 0.5
            anim_transition: 'out_quad'

            line_width: sp(20)
            circle_color: app.colors.primary
            
            background_line_width: sp(10)
            
            # background_circle_color: app.colors.accent
            percent_color: app.colors.accent
            percent_size: sp(42)
            # current_percent: NumericProperty(-1)

    #
    # Text Input 
    #
    MDBoxLayout:
        size_hint: 0.5, 0.15
        pos_hint: {'center_x': 0.5,'top': 0.25 }  
        orientation: 'vertical'
        spacing: 10 
        MDTextField:
            id: text_field_input
            size_hint: 1, None 
            pos_hint: {'center_x': 0.5,'top': 1.0 }    
            mode: 'rectangle'
            halign: 'center'
            icon_left: "barcode"
            icon_right_color_focused: app.colors.accent
            line_color_focus: app.colors.accent
            text_color_focus: app.colors.accent
            max_text_length: 
                root.model.MAX_LEN_INPUT
            on_text_validate: 
                root.controller.validate_input( ) 
        MDLabel:
            size_hint: 1, 0.8
            pos_hint: {'center_x': 0.50 }
            text: 'Número de série'
            halign: 'center'
            font_size: sp(32)

    # 
    # Info Boxes
    # 
    MDBoxLayout: 
        size_hint: 0.2, 0.5
        pos_hint: {'center_x': 0.125,'top': 0.8 }
        orientation: 'vertical'
        radius: sp(5)
        spacing: 10 
        #
        # Tempo de operação 
        MDCard:
            radius: self.parent.radius
            orientation: 'vertical'
            md_bg_color: app.colors.primary
            padding: sp(10)
            MDLabel:
                size_hint: 1, 0.25
                bold: True 
                halign: 'center'
                text: 'Tempo de operação'
                font_size: sp(16)
            MDLabel:
                text: '10:20:30'
                font_size: sp(16)
                halign: 'center'
            
        #
        # Tempo por operação
        MDCard:
            radius: self.parent.radius
            orientation: 'vertical'
            md_bg_color: app.colors.primary
            padding: sp(10)
            MDLabel:
                size_hint: 1, 0.25
                bold: True 
                halign: 'center'
                text: 'Tempo por operação'
                font_size: sp(16)
            MDLabel:
                text: '00:01:35'
                font_size: sp(16)
                halign: 'center'
            
        #
        # Produção total
        MDCard:
            radius: self.parent.radius
            orientation: 'vertical'
            md_bg_color: app.colors.primary
            padding: sp(10)
            MDLabel:
                size_hint: 1, 0.25
                bold: True 
                halign: 'center'
                text: 'Produção total'
                font_size: sp(16)
            MDLabel:
                text: '24 und'
                font_size: sp(16)
                halign: 'center'
                
        #
        # Tempo de operação 
        MDCard:
            radius: self.parent.radius
            orientation: 'vertical'
            md_bg_color: app.colors.primary
            padding: sp(10)
            MDLabel:
                size_hint: 1, 0.25
                bold: True 
                halign: 'center'
                text: 'Estimativa de produção'
                font_size: sp(16)
            MDLabel:
                text: '101 und'
                font_size: sp(16)
                halign: 'center'


    #
    # Signs 
    # 
    MDFloatLayout: 
        size_hint: 0.2, 0.5
        pos_hint: {'center_x': 0.875,'top': 0.8 }
        orientation: 'vertical'
        spacing: sp(25)
        padding: sp(25)
        #
        # Error sign 
        MDCard:         
            id: sign_error
            pos_hint: {'center_x': 0.50, 'center_y': 0.80 }
            origin_size: sp(100), sp(100)
            
            activated: False 
            color_active: app.colors.error 
            color_deactive: app.colors.inactive 
            md_bg_color: self.color_active if self.activated else self.color_deactive
            
            size_hint: None, None
            size: self.origin_size
            radius: self.size[0]/2
            on_enter:
                root.controller.hover_sign( self, 'IN' )
            on_leave:
                root.controller.hover_sign( self, 'OUT' )
            FrostedGlass:
                overlay_color: self.parent.md_bg_color
                noise_opacity: 0.05
                blur_size: 15
                saturation: 1.2
                luminosity: 1.3
                border_radius: self.parent.radius 
        #
        # Operation sign
        MDCard: 
            id: sign_attention 
            pos_hint: {'center_x': 0.50,'center_y': 0.50 }
            origin_size: sp(100), sp(100)

            activated: True 
            color_active: app.colors.warning 
            color_deactive: app.colors.inactive 
            md_bg_color: self.color_active if self.activated else self.color_deactive
            size_hint: None, None
            size: self.origin_size
            radius: self.size[0]/2
            on_enter:
                root.controller.hover_sign( self, 'IN' )
            on_leave:
                root.controller.hover_sign( self, 'OUT' )
            FrostedGlass:
                overlay_color: self.parent.md_bg_color
                noise_opacity: 0.05
                blur_size: 15
                saturation: 1.2
                luminosity: 1.3
                border_radius: self.parent.radius 
        # 
        # Success sign 
        MDCard: 
            id: sign_success 
            pos_hint: {'center_x': 0.50,'center_y': 0.20 }
            origin_size: sp(100), sp(100)

            activated: False 
            color_active: app.colors.success 
            color_deactive: app.colors.inactive 
            md_bg_color: self.color_active if self.activated else self.color_deactive
            size_hint: None, None
            size: self.origin_size
            radius: self.size[0]/2
            on_enter:
                root.controller.hover_sign( self, 'IN' )
            on_leave:
                root.controller.hover_sign( self, 'OUT' )
            FrostedGlass:
                overlay_color: self.parent.md_bg_color
                noise_opacity: 0.05
                blur_size: 15
                saturation: 1.2
                luminosity: 1.3
                border_radius: self.parent.radius 

